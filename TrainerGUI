package Project2;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;

import javax.swing.JComboBox;
import javax.swing.JFrame;

public class TrainerGUI extends JFrame implements ActionListener
{
	MainGUI mg;
	UserManager UM = new UserManager();
	JComboBox cb;
	String Trainer[] = {"숀리", "줄리엔", "유재석", "예정화", "김수현", "차태현", "박명수", "김종국", "윤형빈", "남의석"};
	public TrainerGUI(MainGUI mg)
	{
		this.mg = mg;
		setTitle("트레이너");
		setSize(300,70);
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		cb = new JComboBox();
		cb.setBounds(10, 10, 183, 21);
		cb.addItem("트레이너를 선택하세요.");
		for(int i = 0; i <Trainer.length; i++)
		{
			cb.addItem(i + 1 + ". " + Trainer[i]);
		}
		getContentPane().add(cb);
		setVisible(true);
		cb.addActionListener(this);
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		{
			if(cb.getSelectedIndex() != 0)
			{
				int selected = cb.getSelectedIndex() - 1;
				findUser(selected);
				System.out.println("2");
				mg.card.show(mg.Mainpanel, "card2");
				this.dispose();
			}
		}
		// TODO Auto-generated method stub
		
	}
	private void findUser(int index)
	{
		for(int i = mg.model2.getRowCount(); i > 0; i--)
		{
			mg.model2.removeRow(0);
		}
		for(int i = 0; i < UM.List.size(); i++)
		{
			if(UM.List.get(i).getTrainer().equals(Trainer[index]))
			{
				mg.model2.addRow(UM.List.get(i).setVector());
			}
		}
	}

}

